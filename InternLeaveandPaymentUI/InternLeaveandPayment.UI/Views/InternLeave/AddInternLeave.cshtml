@model InternLeaveandPaymentUI.Domain.ViewModels.AddInternLeaveVM
@{
    ViewData["Title"] = "AddInternLeave";
}
<link href="~/css/Intern/addintern.css" rel="stylesheet" />

<div>
    <form asp-controller="InternLeave"  asp-action="AddInternLeave" method="post">
        <div class="kap flexc padding">
